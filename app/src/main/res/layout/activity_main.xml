<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="358dp"
        android:layout_height="413dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/converted_logo2_final" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_below="@id/app_logo"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Sustainability, Traceability, and Technology"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- New Trip Button -->
    <Button
        android:id="@+id/btn_new_trip"
        android:layout_below="@id/tagline"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:text="New Trip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_grey"/>

    <!-- Saved Trips Button -->
    <Button
        android:id="@+id/btn_saved_trips"
        android:layout_below="@id/btn_new_trip"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Saved Trips"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_grey"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_below="@id/btn_saved_trips"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_grey"/>

    <!-- Settings/Menu Icon with Padding -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="@string/settings_menu" />

</RelativeLayout>